<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", form_object: @article %>
      <%= form_with(model: @article, class:"shadow p-3 mb-3 rounded", id: "bg-form", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class:"form-control shadow rounded", placeholder:"Title of article" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder:"Description of article" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :category, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.collection_select :category_ids, Category.all, :id, :name, {:prompt => "Make your selection from the list below(can be empty)"}, {:multiple => true, size: 3, class: "custom-select shadow rounded"} %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class:"btn btn-outline-success btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel & return to article listing ]', articles_path, class:"text-info" %>
    </div>
  </div>
</div>
