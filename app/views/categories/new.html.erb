<div class="container" id="page-content">
  <h1 class="text-center mt-4">Create a new category</h1>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <%= render 'shared/errors', form_object: @category %>
        <%= form_with(model: @category, class:"shadow p-3 mb-3 rounded", id: "bg-form", local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :name, "Category name",class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class:"form-control shadow rounded", placeholder:"Enter a category name" %>
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= f.submit class:"btn btn-outline-success btn-lg" %>
          </div>
        <% end %>
      </div>
      <div class="mb-3">
        <%= link_to '[ Cancel & return to article listing ]', articles_path, class:"text-info" %>
      </div>
    </div>
  </div>
</div>
